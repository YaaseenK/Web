<main class="container">
    <div class="toe">
        <div class="col-md-offset-3 col-md-8">
            <h1><%= title %> </h1>
            <br>
            <a href="/book-list/add" class="btn btn-primary">
            <i class="fas fa-plus"></i> ADD A BOOK</i></a>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- header row -->
                <tr>
                    <th class="text-center col-2">Title</th>
                    <th class="text-center col-4">Description</th>
                    <th class="text-center col-1">Price</th>
                    <th class="text-center col-2">Author</th>
                    <th class="text-center col-2">Genre</th>
                    <th class="text-center col-1">Edit</th>
                    <th class="text-center col-1">Delete</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < bookProperty.length; count++) { %>
                    <tr>
                        <td class="text-center col-2"><%= bookProperty[count].title %> </td>
                        <td class="col-4"><%= bookProperty[count].description %> </td>
                        <td class="text-center col-1">$<%= bookProperty[count].price %> </td>
                        <td class="text-center col-2"><%= bookProperty[count].author %> </td>
                        <td class="text-center col-2"><%= bookProperty[count].genre %> </td>
                        <td class="text-center col-1">
                            <a href="/book-list/edit/<%= bookProperty[count]._id%>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a></td>
                        <td class="text-center col-1">
                            <a href="/book-list/delete/<%= bookProperty[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete </a>
                        </td>
                    </tr>
                <% } %>  
            </table>
        </div>
    </div>
</main>

