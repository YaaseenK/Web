<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- CONTENT FOR EDIT PAGE-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form group">
                    <label for="titleTextFeild">Book Title</label>
                    <input type="text" class="from-control"
                    id="titleTextField"
                    placeholder="Enter Book Title"
                    name="title"
                    value="<%= book.title %>"
                    required>
                </div>

                <div class="form group">
                    <label for="description">Description</label>
                    <textarea type="text" class="from-control"
                    id="descriptionTextField"
                    placeholder="Enter Book Description"
                    name="description"
                    required>"<%= book.description %>"</textarea>
                </div>

                <div class="form group">
                    <label for="Price">Price</label>
                    <input type="text" class="from-control"
                    id="priceTextField"
                    placeholder="Enter Book Price"
                    name="price"
                    value="<%= book.price %>"
                    required>
                </div>

                <div class="form group">
                    <label for="author">Author</label>
                    <input type="text" class="from-control"
                    id="authorTextField"
                    placeholder="Enter Book Author"
                    name="author"
                    value="<%= book.author %>"
                    required>
                </div>

                <div class="form group">
                    <label for="genre">Genre</label>
                    <input type="text" class="from-control"
                    id="genreTextField"
                    placeholder="Enter Book Genre"
                    name="genre"
                    value="<%= book.genre %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit </button>
                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>

